<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="kr.vin.mapper.UserMapper">


	<select id="getList" resultType="kr.vin.domain.UserVO"> 
	<![CDATA[
	select * from user_tbl 
	]]>
	</select>

	<insert id="insert">
		insert into user_tbl
		(userId,userPw,userName,Birth,zipCode,userAddr,userAddr2,userPhone,userMail,detailAddr,extraAddr)
		values(#{userId},#{userPw},#{userName},#{Birth},
		#{zipCode},#{userAddr},#{userAddr2},#{userPhone},#{userMail},#{detailAddr},#{extraAddr}
		)
	</insert>


	<select id="read" resultType="kr.vin.domain.UserVO">
		select * from user_tbl where userId
		= #{userId}
	</select>

	<delete id="delete">
		delete from user_tbl where userId=#{userId}
	</delete>

	<update id="update">
		update user_tbl
		set

		userPw=#{userPw},
		userName=#{userName},
		userBirth=#{Birth},
		zipCode=#{zipCode},
		userAddr=#{userAddr},
		userAddr2=#{userAddr2},
		userPhone=#{userPhone},
		userMail=#{userMail},
		detailAddr=#{detailAddr},
		extraAddr=#{extraAddr}


		where
		userId = #{userId}
	</update>

<!-- 아이디 중복 검사 -->
<select id="checkOverId" parameterType="String" resultType="int">
select count(*) from user_tbl where userId = #{userId}
</select>
	
	
	<!--로그인  -->
	<select id="id_all_check" resultType="kr.vin.domain.UserVO">

SELECT * FROM user_tbl where userId=#{Id}
</select>
	

</mapper>